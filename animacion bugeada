	cout << endl << endl << endl << endl << endl << endl;
	cout << "                              <c> 2020 UABCS                              ";
	cout << endl;
	cout << "                            All rights reserved                           ";
	cout << endl;
	char ch; //or 'int ch;' (it doesn't really matter)

	//the program pauses here until a key is pressed
	ch = _getch();

	if (ch == 'E')
		std::cout << "You pressed a!" << std::endl;
	else
	cout<< endl << endl << endl;
	
		
	}
	return 0;
	
}
