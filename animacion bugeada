VOID Shotanimation() {
	HANDLE hCon;
	hCon = GetStdHandle(STD_OUTPUT_HANDLE);
	COORD dwPos;
	for (size_t i = 1; i < 3; i++)
	{
		int a, b, j;
		b = 0;
		a = 0;
		j = 8;
		
			for (size_t a = 12; a < 16; a++)
			{
				dwPos.X = a;
				dwPos.Y = j;
				SetConsoleCursorPosition(hCon, dwPos);
				if (b == 0)
				{
					color();
				}
				b += 1;
				if (b >= 1)
				{
					b = 0;
				}
				printf("%c", 126);
				if (j - 1 == 0)
				{
					Sleep(60);
					dwPos.X = a;
					dwPos.Y = j - 1;
					SetConsoleCursorPosition(hCon, dwPos);

					printf("%c", 220);
			}
			
			

			Sleep(60);
			dwPos.X = a;
			dwPos.Y = j;
			SetConsoleCursorPosition(hCon, dwPos);
			printf(" ");
		}
	}
}
VOID Player() {
	SetConsoleTextAttribute(GetStdHandle(STD_OUTPUT_HANDLE), 3);
	cout << "         ";
	printf("%c",220);
	cout << endl << "        ";
	printf("%c%c%c%c", 201,206,205,175);
	while (true)
	{
		Shotanimation();
	}
	Shotanimation();
	cout << "                        <<==Player";
	cout << endl << "         ";
	printf("%c", 142);
	cout << endl;
	SetConsoleTextAttribute(GetStdHandle(STD_OUTPUT_HANDLE), 15);
}
VOID ENEMIESTEST(){
	
	cout << "         ";
	SetConsoleTextAttribute(GetStdHandle(STD_OUTPUT_HANDLE), 15);
	printf("%c", 95);
	
	cout << endl << "        ";
	SetConsoleTextAttribute(GetStdHandle(STD_OUTPUT_HANDLE), 32);
	printf("%c%c%c", 40, 170, 41 );
	SetConsoleTextAttribute(GetStdHandle(STD_OUTPUT_HANDLE), 15);
	cout << "                         <<==Enemies";
	SetConsoleTextAttribute(GetStdHandle(STD_OUTPUT_HANDLE), 15);
}

int main()
{
	int Sc,P1S,P2S;
	Sc = 000000;
	P1S = 0;
	P2S = 0;
	bool Menu;
	Menu = true;
	while (Menu == true)
	{
	cout << "         "<<" P1 Score "<<P1S << "             Hi-Score " << Sc<<"                       ";
	cout << endl;
	

    
	cout << "          ";
	Theme();
	cout << endl;
	for (size_t i = 0; i < 75; i++)
	{
		printf("%c", 220);
	}
	cout << endl;
	Player();
	ENEMIESTEST();
	
	cout << endl << endl ;
	cout << "             *At this moment this game is still in development*           ";
	cout << endl;
	cout << "      * We ask that you wait for future updates to test our project*      ";
	cout << endl << endl << endl;
	cout << "                          <Press any key to exit>                         ";
	cout << endl << endl;
	cout << "              [^]                                   [Space]               ";
	cout << endl;
